{
  "name": "Invoice",
  "plural": "invoices",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "referenceNumber": {
      "type": "number",
      "required": true
    },
    "amount": {
      "type": "number",
      "required": true,
      "dataType": "decimal",
      "precision": 10,
      "scale": 2,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "order": {
      "type": "belongsTo",
      "model": "Order",
      "foreignKey": ""
    },
    "paymentMethod": {
      "type": "belongsTo",
      "model": "PaymentMethod",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {
    "paymentMethodsReport": {
      "accepts": [
        {
          "arg": "storeId",
          "type": "number",
          "required": true,
          "description": "Store id",
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "dateFrom",
          "type": "date",
          "required": true,
          "description": "Date",
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "dateTo",
          "type": "date",
          "required": true,
          "description": "Date",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [
        {
          "type": "array",
          "root": true,
          "description": "Invoice payment methods list"
        }
      ],
      "description": "Generate invoice payment methods report",
      "http": [
        {
          "path": "/paymentMethodsReport",
          "verb": "post"
        }
      ]
    }
  }
}
