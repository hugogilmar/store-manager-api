  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "number": {
      "type": "number",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "amount": {
      "type": "number",
      "required": true,
      "dataType": "decimal",
      "precision": 10,
      "scale": 2,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "order": {
      "type": "belongsTo",
      "model": "Order",
      "foreignKey": ""
    },
    "paymentMethod": {
      "type": "belongsTo",
      "model": "PaymentMethod",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
